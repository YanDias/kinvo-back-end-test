@model List<Investimento>

<h2>Minha Carteira</h2>
<table class="table table-hover table-striped"
       style="margin-top:15px;margin-bottom:15px">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Taxa de Rendimento</th>
            <th>Valor Investido</th>
            <th>Data Investimento</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Investimento item in Model)
        {

        <tr>
            <td>@item.Produto.Nome</td>
            <td>@item.Produto.Rendimento</td>
            <td>@item.ValorInvestido</td>
            <td>@item.DataAplicacao</td>

            @if (item.DataResgate != DateTime.MinValue)
            {
            <td>
               Resgadato dia: @item.DataResgate.Date
            </td>

            <td>
                <form asp-action="Visualizar" method="post">
                    <input name="id" value="@item.IdInvestimento" hidden />
                    <input type="submit" class="btn btn-info" value="Visualizar" />
                </form>
            </td>
            
            
            }
            else
            { 
             <td>
                <form asp-action="Resgatar" method="post">
                    <input name="id" value="@item.IdInvestimento" hidden />
                    <input type="submit" class="btn btn-warning" value="Resgatar" />
                </form>
            </td>}           
            
        </tr>
        }

    </tbody>
</table>
