@model Investimento


    
    <script src="~/lib/jquery/dist/jquery.maskedinput.js" type="text/javascript"></script>


    <form enctype="multipart/form-data">
        <fieldset>
            <legend>Investimento </legend>
            <div asp-validation-summary="ModelOnly" class="text-primary"></div>


            <div class="form-group" id="ProdutoNome">
                <label asp-for="Produto.Nome"></label>
                <input type="text" class="form-control" asp-for="Produto.Nome" disabled />
                <span asp-validation-for="Produto.Nome" class="text-primary"></span>
            </div>

            <div class="form-group" id="ProdutoDesc">
                <label asp-for="Produto.Descricao"></label>
                <input type="text" class="form-control" asp-for="Produto.Descricao" disabled />
                <span asp-validation-for="Produto.Descricao" class="text-primary"></span>
            </div>

            <div class="form-group" id="Rendimento">
                <label asp-for="Produto.Rendimento"></label>
                <input type="text" class="form-control" asp-for="Produto.Rendimento" disabled id="rend" />
                <span asp-validation-for="Produto.Rendimento" class="text-primary"></span>
            </div>

            <div class="form-group" id="Rendimento">
                <label >Dias para o rendimento </label>
                <input type="text" class="form-control" asp-for="Produto.Tempo_Rendimento_Dias" disabled  />
                <span asp-validation-for="Produto.Tempo_Rendimento_Dias" class="text-primary"></span>
            </div>

            <div class="form-group" id="DataInvestido">
                <label>Data Investimento</label>
                <input type="date" class="form-control" asp-for="DataAplicacao" disabled />
                <span asp-validation-for="DataAplicacao" class="text-primary"></span>
            </div>

            <div class="form-group" id="ValorInvestido">
                <label>Valor Investido</label>
                <input type="text" class="form-control" asp-for="ValorInvestido" disabled id="iv" />
                <span asp-validation-for="ValorInvestido" class="text-primary"></span>
            </div>


            <div class="form-group" id="ValorRecolhido">
                <label asp-for="DataResgate"></label>
                <input type="date" class="form-control" asp-for="DataResgate" disabled />
                <span asp-validation-for="DataResgate" class="text-primary"></span>
            </div>

            <div class="form-group" id="ValorBruto">
                <label>Valor Resgatado Bruto</label>
                <input type="text" class="form-control" asp-for="ValorResgatadoBruto" disabled id="br" />
                <span asp-validation-for="ValorResgatadoBruto" class="text-primary"></span>
            </div>

            <div class="form-group" id="ValorLiquido">
                <label>Valor Liquido Resgatado</label>
                <input type="text" class="form-control" asp-for="ValorResgatadoLiquido" disabled id="lq" />
                <span asp-validation-for="ValorResgatadoLiquido" class="text-primary"></span>
            </div>

            <div class="form-group" id="ValorRecolhido">
                <label> Valor Recolhido Imposto Renda</label>
                <input type="text" class="form-control" asp-for="ValorRecolhidoIR" disabled id="ir" />
                <span asp-validation-for="ValorRecolhidoIR" class="text-primary"></span>
            </div>
        </fieldset>
    </form>

<script type="text/javascript">
               
    document.getElementById("rend").value = document.getElementById("rend").value + "%";
    document.getElementById("ir").value = "R$ " + document.getElementById("ir").value;
    document.getElementById("br").value = "R$ " + document.getElementById("br").value;
    document.getElementById("lq").value = "R$ " + document.getElementById("lq").value;
    document.getElementById("iv").value = "R$ " +document.getElementById("iv").value;
</script>