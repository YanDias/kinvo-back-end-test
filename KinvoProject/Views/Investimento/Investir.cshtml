@model Investimento


@{
    
    ViewData["Title"] = "Banco";

}

    <script src="~/lib/jquery/dist/jquery.maskedinput.js" type="text/javascript"></script>


<center><h2>Investir Produto</h2></center>
<br />
<br />
<form asp-action="Investir" method="post"
      enctype="multipart/form-data">
    <fieldset>
        <legend>Banco</legend>
        <div asp-validation-summary="ModelOnly" class="text-primary"></div>


        <div class="form-group" id="Produto" hidden>
            <label asp-for="Produto.IdProduto"></label>
            <input type="text" class="form-control" asp-for="Produto.IdProduto" disabled />
            <span asp-validation-for="Produto.IdProduto" class="text-primary"></span>
        </div>

        <div class="form-group" id="ProdutoNome">
            <label asp-for="Produto.Nome"></label>
            <input type="text" class="form-control" asp-for="Produto.Nome" disabled />
            <span asp-validation-for="Produto.Nome" class="text-primary"></span>
        </div>

        <div class="form-group" id="ProdutoDesc">
            <label asp-for="Produto.Descricao"></label>
            <input type="text" class="form-control" asp-for="Produto.Descricao" disabled />
            <span asp-validation-for="Produto.Descricao" class="text-primary"></span>
        </div>

        <div class="form-group" id="Rendimento">
            <label asp-for="Produto.Rendimento"></label>
            <input type="text" class="form-control" asp-for="Produto.Rendimento" disabled />
            <span asp-validation-for="Produto.Rendimento" class="text-primary"></span>
        </div>

        <div class="form-group" id="Nome">
            <label asp-for="ValorInvestido"></label>
            <input type="text" class="form-control" name="investir" id="inv"/>
            <span asp-validation-for="ValorInvestido" class="text-primary"></span>
        </div>

        <div>
            <input type="submit" class="btn btn-success" value="Salvar" />
            <br><br />
        </div>

    </fieldset>
</form>


<script>

    $(document).ready(function () {
        $("#inv").mask("R$ 99999,99");             
    });
</script>