@model Conta

    <form asp-action="Login" method="post"
          enctype="multipart/form-data">
        <fieldset>
            <legend>Login Cliente</legend>
            <div asp-validation-summary="ModelOnly" class="text-primary"></div>

            <div class="form-group" id="Nome">
                <label asp-for="NumeroConta"></label>
                <input type="number" class="form-control" asp-for="NumeroConta" />
                <span asp-validation-for="NumeroConta" class="text-primary"></span>
            </div>

            <div class="form-group">
                <label asp-for="Senha"></label>
                <input type="password" class="form-control"  asp-for="Senha" />
                <span asp-validation-for="Senha" class="text-primary"></span>
            </div>
        


            <div>
                <input type="submit" class="btn btn-info" value="Login" />
                <br><br />
            </div>

        </fieldset>
    </form>

